<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.HomeController"
            prefWidth="500" prefHeight="400"
            style="-fx-background-color: #FFFFFF;">

    <VBox alignment="CENTER" spacing="25"
          AnchorPane.topAnchor="40"
          AnchorPane.bottomAnchor="40"
          AnchorPane.leftAnchor="80"
          AnchorPane.rightAnchor="80">

        <Label text="Welcome to the Business Manager"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1E88E5;" />

        <Label fx:id="welcomeLabel"
               text="Hello, User!"
               style="-fx-font-size: 14px; -fx-text-fill: #E53935;" />

        <HBox alignment="CENTER" spacing="15">
            <Button text="Clients" fx:id="clientsBtn" onAction="#openClients"
                    style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 35;" />
            <Button text="Orders" fx:id="ordersBtn" onAction="#openOrders"
                    style="-fx-background-color: #E53935; -fx-text-fill: white; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 35;" />
        </HBox>

        <HBox alignment="CENTER" spacing="15">
            <Button text="Products" fx:id="productsBtn" onAction="#openProducts"
                    style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 35;" />
            <Button text="Inventory" fx:id="inventoryBtn" onAction="#openInventory"
                    style="-fx-background-color: #E53935; -fx-text-fill: white; -fx-background-radius: 10; -fx-pref-width: 100; -fx-pref-height: 35;" />
        </HBox>

        <Button text="Logout" fx:id="logoutBtn" onAction="#handleLogout"
                style="-fx-background-color: #CCCCCC; -fx-text-fill: black; -fx-background-radius: 10; -fx-pref-width: 120; -fx-pref-height: 35;" />

    </VBox>
</AnchorPane>
