<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="desktopapps.demo4.controllers.ProductsController"
            style="-fx-background-color: linear-gradient(to bottom right, #edf2f6, #f9fbfd); -fx-font-family: 'Segoe UI';">

    <!-- Top Navigation -->
    <top>
        <HBox spacing="40" alignment="CENTER_RIGHT" style="-fx-padding:20; -fx-background-color: transparent;">
            <Label text="Store" style="-fx-font-size:14px; -fx-text-fill:#333;" />
            <Label text="Accessories" style="-fx-font-size:14px; -fx-text-fill:#333;" />
            <Label text="Support" style="-fx-font-size:14px; -fx-text-fill:#333;" />
            <Label text="About Us" style="-fx-font-size:14px; -fx-text-fill:#333;" />
        </HBox>
    </top>

    <!-- Center: Content -->
    <center>
        <HBox spacing="60" alignment="CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Left Side: Info + Table -->
            <VBox spacing="20" alignment="TOP_CENTER">

                <Label text="Products Management"
                       style="-fx-font-size:28px; -fx-text-fill:#202124; -fx-font-weight:bold;" />

                <TableView fx:id="productsTable" prefHeight="250" prefWidth="480"
                           style="-fx-background-color:white; -fx-border-color:#ddd; -fx-border-radius:12; -fx-background-radius:12; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0.2, 0, 3);">
                    <columns>
                        <TableColumn fx:id="nameCol" text="Name" prefWidth="200" />
                        <TableColumn fx:id="priceCol" text="Price" prefWidth="120" />
                        <TableColumn fx:id="quantityCol" text="Quantity" prefWidth="120" />
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <TextField fx:id="nameFld" promptText="Product Name"
                               style="-fx-background-radius:12; -fx-border-radius:12; -fx-padding:8; -fx-border-color:#ccc;" />
                    <TextField fx:id="priceFld" promptText="Price"
                               style="-fx-background-radius:12; -fx-border-radius:12; -fx-padding:8; -fx-border-color:#ccc;" />
                    <TextField fx:id="quantityFld" promptText="Quantity"
                               style="-fx-background-radius:12; -fx-border-radius:12; -fx-padding:8; -fx-border-color:#ccc;" />
                </HBox>

                <HBox spacing="15">
                    <Button fx:id="addBtn" text="Add" onAction="#addProduct"
                            style="-fx-background-color:#0078ff; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:20; -fx-padding:8 20 8 20;" />
                    <Button fx:id="updateBtn" text="Update" onAction="#updateProduct"
                            style="-fx-background-color:#00b894; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:20; -fx-padding:8 20 8 20;" />
                    <Button fx:id="deleteBtn" text="Delete" onAction="#deleteProduct"
                            style="-fx-background-color:#d63031; -fx-text-fill:white; -fx-font-weight:bold; -fx-background-radius:20; -fx-padding:8 20 8 20;" />
                </HBox>

                <Label fx:id="errorMsg" textFill="red" />

            </VBox>

            <!-- Right Side: Product Image -->
            <VBox alignment="CENTER" spacing="15">
                <ImageView fx:id="productImage" fitHeight="280" fitWidth="280" preserveRatio="true">
                    <image>
                        <Image url="@desktopapps/demo4/images/products.png" />
                    </image>
                </ImageView>

                <Label text="Premium Quality Products"
                       style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:#333;" />
                <Label text="Modern design meets top performance."
                       style="-fx-font-size:14px; -fx-text-fill:#555;" />
            </VBox>

        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding:20;">
            <Button text="Back to Home"
                    onAction="#goHome"
                    style="-fx-background-color:#6c5ce7;
                    -fx-text-fill:white;
                    -fx-font-weight:bold;
                    -fx-background-radius:20;
                    -fx-padding:8 20 8 20;">
            </Button>
        </HBox>
    </bottom>

</BorderPane>
